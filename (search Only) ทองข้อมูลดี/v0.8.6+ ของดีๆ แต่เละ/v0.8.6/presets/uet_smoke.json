{
  "meta": {
    "name": "uet_smoke",
    "version": "1.0",
    "description": "UET smoke test - verify UET runs without crash"
  },
  "run": {
    "seed": 42,
    "dt": 0.005,
    "steps": 500,
    "integrator": "leapfrog"
  },
  "world": {
    "units": "sim",
    "model": "C_only",
    "grid": 64,
    "domain": 10.0,
    "initial": {
      "type": "gaussian",
      "params": { "amplitude": 1.0, "sigma": 1.0 }
    }
  },
  "equations": {
    "enabled": ["UET"],
    "params": {
      "kappa": 0.5,
      "beta": 0.0,
      "potential": "quartic(a=1.0, delta=1.0, s=0.5)"
    }
  },
  "outputs": {
    "metrics": ["OMEGA", "OMEGA_DELTA", "MONOTONE", "KINETIC", "POTENTIAL"],
    "logEvery": 10,
    "snapshotEvery": 100
  },
  "validation": {
    "gates": [
      { "id": "no_nan", "tol": 0 },
      { "id": "determinism", "tol": 1e-10, "runs": 2 },
      { "id": "monotone_omega", "tol": 0.01 },
      { "id": "uet_smoke", "tol": 0 }
    ]
  },
  "feedback": {
    "trackTransitions": true,
    "transitionThreshold": 0.01,
    "detectEquilibrium": true
  }
}
