{
  "meta": {
    "name": "minimal",
    "version": "1.0",
    "description": "Minimal smoke test - single field, quick run"
  },
  "run": {
    "seed": 42,
    "dt": 0.01,
    "steps": 100,
    "integrator": "leapfrog"
  },
  "world": {
    "units": "sim",
    "model": "C_only",
    "grid": 32,
    "domain": 10.0,
    "initial": {
      "type": "random",
      "params": { "mean": 0.0, "std": 0.1 }
    }
  },
  "equations": {
    "enabled": ["UET"],
    "params": {
      "kappa": 0.5,
      "beta": 0.0,
      "potential": "quartic(a=1.0, delta=1.0, s=0.5)"
    }
  },
  "outputs": {
    "metrics": ["OMEGA", "OMEGA_DELTA", "MONOTONE"],
    "logEvery": 10,
    "snapshotEvery": 50
  },
  "validation": {
    "gates": [
      { "id": "no_nan", "tol": 0 },
      { "id": "uet_smoke", "tol": 0 }
    ]
  },
  "feedback": {
    "trackTransitions": true,
    "transitionThreshold": 0.05,
    "detectEquilibrium": true
  }
}
