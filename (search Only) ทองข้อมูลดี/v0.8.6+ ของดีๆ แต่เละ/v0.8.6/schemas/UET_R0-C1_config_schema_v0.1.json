{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "UET config.json schema v0.1",
  "type": "object",
  "required": [
    "case_id",
    "model",
    "domain",
    "grid",
    "time",
    "params",
    "integrator",
    "units",
    "rng"
  ],
  "properties": {
    "case_id": {
      "type": "string"
    },
    "model": {
      "type": "string",
      "enum": [
        "C_only",
        "C_I"
      ]
    },
    "units": {
      "type": "object",
      "required": [
        "mode"
      ],
      "properties": {
        "mode": {
          "type": "string",
          "enum": [
            "dimensionless",
            "physical"
          ]
        },
        "energy_unit": {
          "type": "string"
        },
        "length_unit": {
          "type": "string"
        },
        "time_unit": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "domain": {
      "type": "object",
      "required": [
        "dim",
        "L",
        "bc"
      ],
      "properties": {
        "dim": {
          "type": "integer",
          "minimum": 1,
          "maximum": 3
        },
        "L": {
          "type": "number",
          "exclusiveMinimum": 0
        },
        "bc": {
          "type": "string",
          "enum": [
            "periodic",
            "neumann"
          ]
        }
      }
    },
    "grid": {
      "type": "object",
      "required": [
        "N"
      ],
      "properties": {
        "N": {
          "type": "integer",
          "minimum": 8
        },
        "dtype": {
          "type": "string",
          "enum": [
            "float64",
            "float32"
          ]
        }
      },
      "additionalProperties": true
    },
    "time": {
      "type": "object",
      "required": [
        "dt",
        "T",
        "max_steps"
      ],
      "properties": {
        "dt": {
          "type": "number",
          "exclusiveMinimum": 0
        },
        "T": {
          "type": "number",
          "exclusiveMinimum": 0
        },
        "max_steps": {
          "type": "integer",
          "minimum": 1
        },
        "tol_abs": {
          "type": "number",
          "minimum": 0
        },
        "tol_rel": {
          "type": "number",
          "minimum": 0
        },
        "backtrack": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "factor": {
              "type": "number",
              "exclusiveMinimum": 0,
              "exclusiveMaximum": 1
            },
            "max_backtracks": {
              "type": "integer",
              "minimum": 0
            }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    },
    "params": {
      "type": "object"
    },
    "integrator": {
      "type": "object",
      "required": [
        "name",
        "mode"
      ],
      "properties": {
        "name": {
          "type": "string",
          "enum": [
            "semiimplicit",
            "convex_splitting",
            "explicit_euler"
          ]
        },
        "mode": {
          "type": "string",
          "enum": [
            "strict",
            "fast"
          ]
        }
      },
      "additionalProperties": true
    },
    "rng": {
      "type": "object",
      "required": [
        "seed",
        "algorithm"
      ],
      "properties": {
        "seed": {
          "type": "integer"
        },
        "algorithm": {
          "type": "string",
          "enum": [
            "numpy_pc64"
          ]
        }
      }
    }
  },
  "additionalProperties": true
}