{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "EquationDef",
  "type": "object",
  "required": [
    "id",
    "type",
    "title",
    "inputs",
    "outputs",
    "runner",
    "version"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "type": {
      "const": "equation"
    },
    "title": {
      "type": "string"
    },
    "category": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "formula_text": {
      "type": "string"
    },
    "inputs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "key",
          "label",
          "default"
        ],
        "properties": {
          "key": {
            "type": "string"
          },
          "label": {
            "type": "string"
          },
          "unit": {
            "type": "string"
          },
          "default": {
            "type": [
              "number",
              "string"
            ]
          },
          "min": {
            "type": "number"
          },
          "max": {
            "type": "number"
          },
          "step": {
            "type": "number"
          }
        }
      }
    },
    "outputs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "key",
          "label"
        ],
        "properties": {
          "key": {
            "type": "string"
          },
          "label": {
            "type": "string"
          },
          "unit": {
            "type": "string"
          }
        }
      }
    },
    "runner": {
      "type": "object",
      "required": [
        "kind"
      ],
      "properties": {
        "kind": {
          "type": "string",
          "enum": [
            "local",
            "api"
          ]
        },
        "fn": {
          "type": "string"
        },
        "endpoint": {
          "type": "string"
        }
      }
    },
    "notes": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "version": {
      "type": "string"
    }
  }
}